{
  "name": "react-native-mapbox-geometry-editor",
  "version": "0.1.0",
  "description": "Interactive shape editing on top of the Mapbox GL React Native module",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-mapbox-geometry-editor.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "docs": "typedoc",
    "test": "jest",
    "typescript": "tsc --noEmit && tsc --project example --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/newfarms/react-native-mapbox-geometry-editor",
  "author": "Mojow Autonomous Solutions Inc. <info@mojow.ai> (https://github.com/newfarms)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/newfarms/react-native-mapbox-geometry-editor/issues"
  },
  "homepage": "https://github.com/newfarms/react-native-mapbox-geometry-editor#readme",
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.16.7",
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^3.0.1",
    "@react-native-mapbox-gl/maps": "^8.5.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/geojson": "^7946.0.8",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.38",
    "@types/react-native": "0.66.11",
    "@types/yup": "^0.29.13",
    "commander": "^8.3.0",
    "commitlint": "^11.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.8",
    "jest": "^27.4.6",
    "metro-react-native-babel-preset": "^0.66.2",
    "pod-install": "^0.1.30",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-native": "0.66.4",
    "react-native-builder-bob": "^0.18.2",
    "release-it": "^14.2.2",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "@react-native-mapbox-gl/maps": "^8.5.0",
    "react": "*",
    "react-native": "*",
    "react-native-get-random-values": "*",
    "react-native-vector-icons": "^9.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "testRegex": "(\\.|/)(test|spec)\\.[jt]sx?$"
  },
  "release-it": {
    "git": {
      "commitMessage": "Chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-shadow": "error",
      "no-shadow": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ],
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "eslintIgnore": [
    "docs/",
    "lib/",
    "node_modules/",
    "scripts/bootstrap.js",
    "tool/fix_winding.js",
    "*.config.js"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "configFile": "./babel.config.js"
        }
      ],
      [
        "module",
        {
          "configFile": "./babel.config.js"
        }
      ],
      "typescript"
    ]
  },
  "dependencies": {
    "@demvsystems/yup-ast": "^1.2.1",
    "@mapbox/geojsonhint": "^3.0.1",
    "@turf/along": "^6.5.0",
    "@turf/area": "^6.5.0",
    "@turf/bbox": "^6.5.0",
    "@turf/boolean-disjoint": "^6.5.0",
    "@turf/boolean-equal": "^6.5.0",
    "@turf/centroid": "^6.5.0",
    "@turf/flatten": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "@turf/length": "^6.5.0",
    "@turf/meta": "^6.5.0",
    "@turf/nearest-point": "^6.5.0",
    "@turf/nearest-point-on-line": "^6.5.0",
    "@turf/point-to-line-distance": "^6.5.0",
    "@turf/rewind": "^6.5.0",
    "formik": "^2.2.9",
    "lodash": "^4.17.21",
    "mobx": "^6.3.10",
    "mobx-keystone": "^0.64.1",
    "mobx-react-lite": "^3.2.3",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-paper": "^4.11.1",
    "react-native-responsive-screen": "^1.4.2",
    "yup": "^0.32.11"
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "eslint-plugin-flowtype": "8.0.3"
  }
}
