{
  "name": "react-native-mapbox-geometry-editor",
  "version": "0.1.0",
  "description": "Interactive shape editing on top of the Mapbox Maps SDK for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-mapbox-geometry-editor.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "docs": "typedoc --listInvalidSymbolLinks",
    "test": "jest",
    "typescript": "tsc --noEmit && tsc --project example --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/newfarms/react-native-mapbox-geometry-editor",
  "author": "Mojow Autonomous Solutions Inc. <info@mojow.ai> (https://github.com/newfarms)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/newfarms/react-native-mapbox-geometry-editor/issues"
  },
  "homepage": "https://github.com/newfarms/react-native-mapbox-geometry-editor#readme",
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.12.13",
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@react-native-mapbox-gl/maps": "^8.1.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/geojson": "^7946.0.7",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/react": "^16.13.1",
    "@types/react-native": "0.63.4",
    "@types/yup": "^0.29.11",
    "commander": "^7.2.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "pod-install": "^0.1.18",
    "prettier": "^2.2.1",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-builder-bob": "^0.17.1",
    "release-it": "^14.2.2",
    "typedoc": "^0.20.20",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@react-native-mapbox-gl/maps": "^8.1.0",
    "react": "*",
    "react-native": "*",
    "react-native-get-random-values": "*",
    "react-native-vector-icons": "^8.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "testRegex": "(\\.|/)(test|spec)\\.[jt]sx?$"
  },
  "release-it": {
    "git": {
      "commitMessage": "Chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "docs/",
    "lib/",
    "node_modules/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "configFile": "./babel.config.js"
        }
      ],
      [
        "module",
        {
          "configFile": "./babel.config.js"
        }
      ],
      "typescript"
    ]
  },
  "dependencies": {
    "@demvsystems/yup-ast": "^1.2.0",
    "@mapbox/geojsonhint": "^3.0.0",
    "@turf/along": "^6.3.0",
    "@turf/area": "^6.3.0",
    "@turf/bbox": "^6.3.0",
    "@turf/boolean-disjoint": "^6.3.0",
    "@turf/boolean-equal": "^6.3.0",
    "@turf/centroid": "^6.3.0",
    "@turf/flatten": "^6.3.0",
    "@turf/helpers": "^6.3.0",
    "@turf/length": "^6.3.0",
    "@turf/meta": "^6.3.0",
    "@turf/nearest-point": "^6.3.0",
    "@turf/nearest-point-on-line": "^6.3.0",
    "@turf/point-to-line-distance": "^6.3.0",
    "@turf/rewind": "^6.3.0",
    "formik": "^2.2.6",
    "lodash": "^4.17.20",
    "mobx": "^6.1.4",
    "mobx-keystone": "^0.48.5",
    "mobx-react-lite": "^3.2.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.3",
    "react-native-paper": "^4.7.1",
    "react-native-responsive-screen": "^1.4.2",
    "yup": "^0.32.8"
  }
}
